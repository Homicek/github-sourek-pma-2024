<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvNadpis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:text="Pick configuration of iPhone 16 pro"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/rgiPhones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <RadioButton
            android:id="@+id/iphoneWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="White"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/iphoneBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Black"/>

        <RadioButton
            android:id="@+id/iphoneCopper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copper"/>

    </RadioGroup>

    <CheckBox
        android:id="@+id/leatherCase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add leather protective case"
        android:layout_gravity="center"/>

    <CheckBox
        android:id="@+id/protectiveGlass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply protective glass"
        android:layout_gravity="center"/>

    <CheckBox
        android:id="@+id/headphones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Airpods pro 2"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm order"
        android:layout_gravity="center"
        android:backgroundTint="@color/myLightOrange"/>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start again"
        android:layout_gravity="center"
        android:backgroundTint="@color/myLightGreen"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/summaryText"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order sumary:"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/iphoneImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/iphonewhite"
        android:layout_marginTop="20dp"/>

    <!--  <ImageView
      android:id="@+id/iphoneBlackImage"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:src="@drawable/iphoneblack"
      android:layout_marginTop="50dp"/>

      <ImageView
      android:id="@+id/iphoneCopperImage"
      android:layout_width="match_parent"
      android:layout_height="300dp"
      android:src="@drawable/iphonecopper"
      android:layout_marginTop="50dp"/>
  -->

</LinearLayout>